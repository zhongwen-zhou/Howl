<%= simple_form_for @user, :validate => true, :html => {:multipart => true} do |f| %>
  <%= f.input :email, label: "电子邮箱", placeholder: "请填入正确的电子邮箱！" %>
  <%= f.input :nick_name, label: "昵称" %>
  <%= f.input :password, label: "密码", hint: "密码需要大于6个字符！" %>
  <%= f.input :password_confirmation, label: "密码确认" %>
  <%= f.input :avatar, label: "我的靓照" %>
  <%= f.input :avatar_cache, :as => :hidden %>
  <%= f.input :brief_introduction, :as => :text, label: "自我介绍", :input_html => {:rows => 5, :cols =>15} %>
  <%= f.button :submit, :value => "新建" %>
<% end %>