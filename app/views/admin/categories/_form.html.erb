<%= simple_form_for [:admin, @category], :validate => true do |f| %>
  <%= f.input :name, label: "类别名", placeholder: "请填入合适的类别名！" %>
  <%= f.input :io_type, label: "收支类型", :as => :select, :collection => Category::IO_TYPE, :label_method => :last, :value_method => :first, :include_blank => false %>  
  <%= f.input :parent_id, label: "父类别", :as => :select, :collection => @top_categories, :label_method => :name, :value_method => :id, :include_blank => "顶级类别" %>  
  <%= f.input :description, :as => :text, label: "类别描述", :input_html => {:rows => 5, :cols =>15} %>
  <%= f.button :submit, :value => "新建" %>
<% end %>
