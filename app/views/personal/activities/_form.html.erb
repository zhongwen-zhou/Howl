<%= simple_form_for [:personal, @current_user, @activity], :validate => true do |f| %>
  <%= f.input :subject, label: "活动主题", placeholder: "来一个响亮的口号吧！" %>
  <%= f.input :address, label: "活动地址" %>
  <%= f.input :visable_status, label: "可见性", :as => :select %>
  <%= f.input :start_date, label: "开始时间", :as => :string %>
  <%= f.input :end_date, label: "结束时间", :as => :string %>
  <%= f.input :description, :as => :text, label: "活动描述", :input_html => {:rows => 5, :cols =>25} %>
  <%= f.button :submit, :value => "新建" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#activity_start_date').datepicker({ 'format' : 'yyyy-mm-dd'});
    $('#activity_end_date').datepicker({ 'format' : 'yyyy-mm-dd'});
  })
</script>
