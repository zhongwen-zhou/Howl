<%= simple_form_for [:personal, @current_user, @activity, @budget], :validate => true do |f| %>
  <%= f.input :name, label: "预算名", placeholder: "来一个响亮的口号吧！" %>
  <%= f.input :total_sum, label: "预算总金额" %>
  <% unless @activity.present? %>
    <%= f.input :visable_status, label: "可见性", :as => :select, :include_blank => "请选择可见性……", collection: Activity::VISABLE_STATUS %>
    <%= f.input :genre_id, label: "帐务类别", collection: Category.top_categories, :as => :grouped_select, :group_method => :children, :include_blank => "请选择帐务类别……" %>
    <%= f.input :start_date, label: "开始时间", :as => :string %>
    <%= f.input :end_date, label: "结束时间", :as => :string %>
  <% end %>
  <%= f.input :description, :as => :text, label: "预算描述", :input_html => {:rows => 5, :cols =>25} %>
  <%= f.button :submit, :value => "新建" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#budget_start_date').datepicker({ 'format' : 'yyyy-mm-dd'});
    $('#budget_end_date').datepicker({ 'format' : 'yyyy-mm-dd'});
  })
</script>